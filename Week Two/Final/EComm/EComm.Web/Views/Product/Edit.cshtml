@model ProductViewModel

<form asp-controller="Product" asp-action="Edit" method="post" class="form-horizontal">
  <h4>Product Edit</h4>
  <hr />
  <div class="form-group">
    <label asp-for="ProductName" class="col-md-2 control-label"></label>
    <div class="col-md-10">
      <input asp-for="ProductName" class="form-control" />
      <span asp-validation-for="ProductName" class="text-danger"></span>
    </div>
  </div>
  <div class="form-group">
    <label asp-for="SupplierId" class="col-md-2 control-label"></label>
    <div class="col-md-10"> 
      <select asp-for="SupplierId" asp-items="Model.Suppliers" class="form-control"></select>
    </div>
  </div>
  <div class="form-group">
    <label asp-for="UnitPrice" class="col-md-2 control-label"></label>
    <div class="col-md-10">
      <input asp-for="UnitPrice" class="form-control" />
      <span asp-validation-for="UnitPrice" class="text-danger"></span>
    </div>
  </div>
  <div class="form-group">
    <label asp-for="Package" class="col-md-2 control-label"></label>
    <div class="col-md-10">
      <input asp-for="Package" class="form-control" />
      <span asp-validation-for="Package" class="text-danger"></span>
    </div>
  </div>
  <div class="form-group">
    <label asp-for="IsDiscontinued" class="col-md-2 control-label"></label>
    <div class="col-md-10">
      <input asp-for="IsDiscontinued" class="form-control" />
      <span asp-validation-for="IsDiscontinued" class="text-danger"></span>
    </div>
  </div>
  <div class="form-group">
    <div class="col-md-offset-2 col-md-10">
      <button type="submit" class="btn btn-success">Save</button>
    </div>
  </div>
</form>

@section scripts {
  @Html.Partial("_ValidationScripts")
}
